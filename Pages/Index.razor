    position: absolute;
    top: 24vh;
    left: -20vw;
    width: 60%;
    height: 2.8vh;
    line-height: 2.8vh;
    font-size: 20px;
    color: @LabelColor;
</Styled>
<Styled @bind-Classname="VersionStyle">
    position: fixed;
    right: 4%;
    top: 2vh;
    color: white;
    font-size: 14px;
</Styled>

